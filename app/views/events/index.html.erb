<h1>Listing Events</h1>
<table class="table">
  <thead>
    <tr>
      <th>Action</th>
      <th>User Name</th>
      <th>User Email</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.action %></td>
        <% if event.user.present? %>
          <td><%= event.user.name %></td>
          <td><%= event.user.email %></td>
        <% elsif event.temp_user.present?%>
          <td><%= event.temp_user.name %></td>
          <td></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        <td><%= event.created_at.strftime("%m/%d/%Y at %I:%M%p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  setTimeout(function(){
   window.location.reload(1);
}, 1000);
</script>